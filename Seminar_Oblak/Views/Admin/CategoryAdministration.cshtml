@using Seminar_Oblak.Models.ViewModel
@model List<ProductCategoryViewModel>
@{
    int counter = 1;
}

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="AdministratorControl">Go Back </a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
         
          
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@product.Title</td>
                <td>@product.Description</td>              
                <td> @Html.ActionLink("View","Details","Admin",new {id= product.Id},new {@class = "btn btn-primary"})
                @Html.ActionLink("Edit","UpdateProduct","Admin",new {id= product.Id},new {@class = "btn btn-primary"})
                 @Html.ActionLink("Delete","DeleteProduct","Admin",new {id= product.Id},new {@class = "btn btn-primary"})<td/>
            </tr>
            counter++;
        }



    </tbody>
</table>


<a class="btn btn-primary" href="@Url.Action("AddProduct", "Admin")">Dodaj novi proizvod</a>
<a class="btn btn-primary" href="@Url.Action("AddProductCategory", "Admin")">Dodaj novu kategoriju</a>