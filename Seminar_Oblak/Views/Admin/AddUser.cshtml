        @Html.LabelFor(x=>x.Email)
        @Html.TextBoxFor(x=> x.Email, new {@class = "form-control",   placeholder=" Enter Amount " })
    </div>
    <div class="form-group">
        @Html.LabelFor(x=>x.Password)
        @Html.TextBoxFor(x=> x.Password, new {@class = "form-control",   placeholder=" Enter Amount " })
    </div>
    <div class="form-group">
        @Html.LabelFor(x=>x.DOB)
